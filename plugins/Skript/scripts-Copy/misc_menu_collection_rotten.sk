  if {collection-RottenFlesh.%UUID of arg-1%} is not higher than 7:
   set {_MenuCollection-RottenFlesh-8.%UUID of arg-1%} to red stained glass pane
  else:
   set {_MenuCollection-RottenFlesh-8.%UUID of arg-1%} to lime stained glass pane

